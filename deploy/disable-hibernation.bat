@echo off
REM Отключение гибернации Windows (освободит место на диске)
echo ========================================
echo Отключение гибернации Windows
echo ========================================
echo.
echo ВНИМАНИЕ: Запустите от имени АДМИНИСТРАТОРА!
echo.
echo Это отключит режим гибернации и удалит файл hiberfil.sys
echo Освободит место на диске (обычно 3-4 GB)
echo.
pause

echo Проверка текущего статуса...
powercfg /a
echo.

echo Отключение гибернации...
powercfg /hibernate off
echo.

echo Проверка результата...
if exist "C:\hiberfil.sys" (
    echo ОШИБКА: Файл все еще существует
    echo Возможно, недостаточно прав администратора
) else (
    echo УСПЕХ: Гибернация отключена, файл удален
    echo Освобождено место на диске
)
echo.

echo ========================================
echo Готово!
echo ========================================
echo.
echo Для включения обратно выполните:
echo powercfg /hibernate on
echo.
pause




